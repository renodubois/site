// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/postgres
{
	"name": "Python 3 & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers-contrib/features/poetry:1": {},
		"ghcr.io/devcontainers-contrib/features/pre-commit:1": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": ".venv/bin/python",
				"python.analysis.typeCheckingMode": "basic",
				"python.linting.pylintEnabled": false,
				"python.formatOnSave": true,
				"python.formatting.provider": "black",
				"python.linting.mypyEnabled": true
			}
		}
	},
	"postCreateCommand": "poetry install && poetry run python manage.py migrate && poetry run python manage.py seed-db && poetry run python manage.py autopopulate_main_menus && pre-commit install && pre-commit install --hook-type pre-push",
	"postStartCommand": "poetry run python manage.py createsuperuser --noinput"
}