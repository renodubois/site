{
	"name": "STL DSA",
	"dockerComposeFile": "docker-compose.yaml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.11.1"
		},
		"ghcr.io/devcontainers-contrib/features/poetry:1": {
			"version": "1.3.1"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true,
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"python.linting.flake8Enabled": true,
				"python.formatting.provider": "black",
				"files.exclude": {
					".venv": true
				},
				"python.defaultInterpreterPath": ".venv/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
	"onCreateCommand": "poetry install && poetry run python manage.py migrate && poetry run python manage.py seed-db && poetry run python manage.py autopopulate_main_menus",
	"postCreateCommand": "poetry run pre-commit install && poetry run pre-commit install --hook-type pre-push",
	"remoteUser": "vscode"
}