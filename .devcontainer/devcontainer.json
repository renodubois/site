{
	"name": "STL DSA",
	"dockerComposeFile": "docker-compose.yaml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"features": {
		"ghcr.io/devcontainers-contrib/features/poetry:1": {},
		"ghcr.io/devcontainers-contrib/features/heroku-cli:1": {},
		"ghcr.io/devcontainers-contrib/features/pre-commit:1": {},
		"ghcr.io/devcontainers/features/node:1": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"python.linting.flake8Enabled": true,
				"python.formatOnSave": true,
				"python.formatting.provider": "black",
				"files.exclude": {
					".venv": true
				},
				"python.defaultInterpreterPath": ".venv/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
	"onCreateCommand": "poetry install && poetry run python manage.py migrate && poetry run python manage.py seed-db && poetry run python manage.py createsuperuser --noinput && poetry run python manage.py autopopulate_main_menus",
	"postCreateCommand": "pre-commit install && npm install -g sass",
	"remoteUser": "vscode"
}